<UserControl x:Class="BankMachine.Login"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BankMachine"
             mc:Ignorable="d" 
             d:DesignHeight="350" d:DesignWidth="500">
    <Grid >
        <Label Content="Please Select One of the Options Below" HorizontalAlignment="Center" Margin="0,60,0,0" VerticalAlignment="Top" Background="{x:Null}" BorderBrush="White" RenderTransformOrigin="3.406,2" Width="313" Height="36" FontWeight="Bold" FontSize="16" FontFamily="Arial" Foreground="White" />
        <Button Content="Scan Card" HorizontalAlignment="Center" Margin="0,125,0,0" VerticalAlignment="Top" Width="258" Height="48" Click="ScanCard" Background="White" FontWeight="Bold"/>
        <Button Content="Enter Account Number" HorizontalAlignment="Center" Margin="0,200,0,0" VerticalAlignment="Top" Width="258" RenderTransformOrigin="0.037,2.208" Height="52" Click="EnterAccountNumber" Background="White" FontWeight="Bold"/>
    </Grid>
</UserControl>
